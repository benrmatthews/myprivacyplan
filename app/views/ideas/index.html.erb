<h1>Listing ideas</h1>

<% @ideas.each do |idea| %>
<div class="row">
  <div class="span4">
    <%= image_tag idea.picture_url(:thumb) if idea.picture? %>
    <h4><%= link_to idea.name, idea %></h4>
    <p><strong>Tags:</strong> <%= raw idea.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
    <%= idea.description %>
  </div>
<% end %>

